<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                                    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <application>
        <resource-bundle>
            <base-name>locale.i18n</base-name>
            <var>i18n</var>
        </resource-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
    </application>

    <navigation-rule>
        <description>Login form</description>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/pages/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <description>Menu outcome's</description>
        <navigation-case>
            <from-outcome>dayReports</from-outcome>
            <to-view-id>/pages/security/dayReports.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>departments</from-outcome>
            <to-view-id>/pages/security/departments.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>department</from-outcome>
            <to-view-id>/pages/security/department.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>users</from-outcome>
            <to-view-id>/pages/security/users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/pages/security/user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>


    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>org.drorzz.bean.UserBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>dao</property-name>
            <value>#{userDAO}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>departmentBean</managed-bean-name>
        <managed-bean-class>org.drorzz.bean.DepartmentBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>dao</property-name>
            <value>#{departmentDAO}</value>
        </managed-property>
    </managed-bean>

</faces-config>