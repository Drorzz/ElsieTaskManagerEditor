<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.3"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="
                http://ocpsoft.com/prettyfaces/3.3.3
                    http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.3.xsd">

    <!-- Begin Example RewriteRules

       // These are custom rewrite-rules, and are probably not necessary for your application.

       <rewrite match="^/old-url/(\w+)/$" substitute="/new_url/$1/" redirect="301" />

    -->

    <url-mapping id="home">
        <pattern value="/" />
        <view-id value="/pages/index.xhtml" />
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login" />
        <view-id value="/pages/login.xhtml" />
    </url-mapping>

    <url-mapping id="user">
        <pattern value="/users" />
        <view-id value="/pages/security/users.xhtml" />
    </url-mapping>

    <url-mapping id="userEdit">
        <pattern value="/user" />
        <view-id value="/pages/security/user.xhtml" />
    </url-mapping>

    <url-mapping id="departments">
        <pattern value="/departments" />
        <view-id value="/pages/security/departments.xhtml" />
    </url-mapping>

    <url-mapping id="departmentEdit">
        <pattern value="/department" />
        <view-id value="/pages/security/department.xhtml" />
    </url-mapping>

    <url-mapping id="dayReports">
        <pattern value="/dayReports" />
        <view-id value="/pages/security/dayReports.xhtml" />
    </url-mapping>

</pretty-config>